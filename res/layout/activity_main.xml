<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:heima="http://schemas.android.com/apk/res/org.itheima.watch"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="clickStart"
            android:text="开始" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="clickStop"
            android:text="停止" />
    </LinearLayout>

    <org.itheima.watch.WatchView
        android:id="@+id/wv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="2dp"
        heima:cycleWidth="2dp"
        heima:hourLength="40dp"
        heima:logo="@drawable/heima"
        heima:minuteLength="60dp"
        heima:secondLength="80dp"
        heima:watchRadius="95dp" >
    </org.itheima.watch.WatchView>

</RelativeLayout>